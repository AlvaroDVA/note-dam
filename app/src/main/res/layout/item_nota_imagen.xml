<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/notasImagenView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:backgroundTint="@color/AzulSemiOscuro" android:padding="0sp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="11sp" android:paddingBottom="14sp">

        <TextView
                android:id="@+id/textoNotaImagen"
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="172dp" android:layout_marginEnd="171dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="11dp" android:layout_marginTop="11dp"
                app:layout_constraintTop_toBottomOf="@+id/imagenNota"/>
        <ImageView
                android:layout_width="232dp"
                android:layout_height="152dp" app:srcCompat="@mipmap/img_default"
                android:id="@+id/imagenNota"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="107dp"
                android:layout_marginEnd="114dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="19dp" app:layout_constraintBottom_toTopOf="@+id/textoNota"/>

        <!-- Ajustado el margen entre las flechas -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>